<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/nodejs-icon.svg" type="image/x-icon">

    <!-- look and feel -->
    <link rel="stylesheet" href="/base.css">
    <!-- structural -->
    <link rel="stylesheet" href="/custom.css">

    <script src="/scripts/setTheme.js"></script>
  </head>
  <body class="flex-col">
    <header class="w100">
      <div class="body flex-col g-05 align-end">
        <p class="header-userstatus as-end">
          <% if (locals.user) { %>
            Logged in as <b><%= locals.user.username %></b>
          <% } else { %>
            Not currently logged in
          <% } %>
          |
          <a href="#" id="theme-toggle"></a>
        </p>
        <div class="header-main flex-row w100 jcspb">
          <div class="logo flex-row g-05">
            <h1>Stash</h1>
            <a href="https://github.com/endulum/odin-uploader" target="_blank">
              <%- include('svg/github.svg') %>
            </a>
          </div>
          <nav class="flex-row g-05">
            <% if (locals.user) { %>
              <a type="button" href="/root">
                <%- include('svg/file-tree.svg') %>
                <span>Files</span>
              </a>
              <a type="button" href="/search">
                <%- include('svg/folder-search.svg') %>
                <span>Search</span>
              </a>
              <a type="button" href="/account">
                <%- include('svg/user.svg') %>
                <span>Account</span>
              </a>
              <a type="button" href="/logout">
                <%- include('svg/logout.svg') %>
                <span>Log out</span>
              </a>
            <% } else { %>
              <a type="button" href="/login">
                <%- include('svg/login.svg') %>
                <span>Log in</span>
              </a>
              <a type="button" class="success" href="/signup">
                <%- include('svg/star.svg') %>
                <span>Sign up</span>
              </a> 
            <% } %>
          </nav>
        </div>
      </div>
    </header>

    <main class="w100">
      <div class="body">
        <!-- success alerts -->
        <% if ('success' in locals && locals.success.length > 0) { %>
          <div class="alert success">
            <%- include('svg/success.svg') %>
            <p>
              <%= locals.success[0] %>
            </p>
          </div>
        <% } %>
        <!-- warning alerts -->
        <% if ('warning' in locals && locals.warning.length > 0) { %>
          <div class="alert warning">
            <%- include('svg/warning.svg') %>
            <p>
              <%= locals.warning[0] %>
            </p>
          </div>
        <% } %>

        <h2 class="mb-1"><%= title %></h2>
        <%- include(`${page}`) %>
      </div>
    </main>

    <script defer src="/scripts/toggleTheme.js"></script>
  </body>

  <footer class="p-1">
    <small>
      &copy; endulum, for The Odin Project.
    </small>
  </footer>
</html>